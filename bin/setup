#!/usr/bin/env sh

echo "✨ Installing dependencies ..."
pnpm install --frozen-lockfile

echo "\n✨ Creating .env file..."
if [ -f .env ]; then
    echo "File already exists, skipping."
else
  cp .env.example .env
fi

echo "✨ Fixing nativewind ..."
pnpm add nativewind@next


echo "\n✨ Done. Happy coding."
